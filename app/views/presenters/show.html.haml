-content_for :title do
  ="#{@presenter.display_name}'s Presentations on Confreaks"
-content_for :secondary_content do
  =render :partial => 'presenters/events', :locals => { :events => @presenter.events }
.profile_header
  .video-twitter
    =link_to 'Tweet', 'http://twitter.com/share', :class => 'twitter-share-button', 'data-text' => "#See all of {@presenter.display_name}'s Presentations", 'data-count' => 'vertical', 'data-via' => 'confreaks'
    =javascript_include_tag 'http://platform.twitter.com/widgets.js', :type => 'text/javascript'
  .profile_picture
    =image_tag(@presenter.avatar_url(:avatar_size => :small, :size => 80)) unless @presenter.avatar_url.nil?
  .profile_actions
    -if @presenter.user == session.user  && !session.anonymous?
      =link_to edit_image_tag, edit_user_path(@presenter.user)
  .profile_name
    =@presenter.display_name
.clear
.videos
  =render :partial => 'videos/video', :collection => @presenter.videos

