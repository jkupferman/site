<div class="center">
  <h3>
    <%=link_to @video.event.display_name, event_path(@video.event)%>
  </h3>
</div>
<%-unless @video.streaming_video.nil? %>
<script type="text/javascript" src="/javascripts/swfobject.js">
</script>
<p id="flash-player" class="center">
  <a href="http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash">Get the Flash Player</a> to see this player.
</p>
<script type='text/javascript'>
  width = <%= @video.streaming_video.asset_type.width %>
  height =<%= @video.streaming_video.asset_type.height + 20 %> 
  var s1 = new SWFObject('/media/player.swf', 'mpl', width, height, '9')
  s1.addParam('allowfullscreen', 'true')
  s1.addParam('allowscriptaccess', 'always')
  s1.addParam('allownetworking', 'all')
  s1.addVariable('file', "<%="#{request.protocol}#{request.host_with_port}#{@video.streaming_video_url}"%>")
<%-if @video.preview_image%>
  s1.addVariable('image', "<%="#{request.protocol}#{request.host_with_port}#{@video.preview_image.data.url}"%>")
<%-end%>
  s1.addVariable('plugins', 'viral-2')
  s1.addVariable('viral.allowmenu','true')
  s1.write('flash-player')
</script>
<%-else%>
  <h3 class="center">No Streaming Video Available at this time</h3>
<%-end%>
<div class="center">
  <h2>
    <%= @video.title %>
    <%-if session.user && session.user.admin?%>
    <%=link_to edit_image_tag, edit_admin_video_path(@video)%>
    <%-end%>
  </h2>
  <span class="caption"><%= @video.display_presenters %></span>
</div>
<div class="center">
  <ul class="asset-list">
    <%=render :partial => 'asset_display', :collection => @video.assets.downloadable%>
  </ul>
</div>
<div class="clear"></div>
