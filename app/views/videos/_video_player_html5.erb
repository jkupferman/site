<%-unless video.streaming_video.nil?%>
<video id="html5-player" class="video-js vjs-default-skin" controls poster="<%="#{request.protocol}#{request.host_with_port}#{video.image.url(:preview)}"%>" preload="none" width="640" height="360">
<source src="<%=ActionController::Base.asset_host%><%=video.streaming_video_url%>" />
<%=render :partial => 'videos/video_player', :locals => { :video => @video} %>
</video>
<%-else%>
  <h3 class="center">There is no streaming video available for this presentation at this time.</h4>
<%-end%>