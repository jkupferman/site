.form-field-set
  .asset-form-fields
    .form-field
      %label
        &nbsp;
      =link_to_remove_fields "Remove this asset", f
    .form-field
      =f.label :description, "Description"
      =f.text_field :description
    .form-field
      =f.label :data, "Asset"
      =f.file_field :data
    .form-field
      =f.label :asset_type_id, "Asset Type"
      =f.collection_select :asset_type_id, @asset_types, :id, :description, :include_blank => true
  .asset-form-data
    .form-field
      %label
        ZC Job ID
      -if f.object.zencoder_job_id
        =link_to f.object.zencoder_job_id, "http://app.zencoder.com/jobs/#{f.object.zencoder_job_id}", :target => "_blank"
      -unless f.object.zencoder_output_id
        =link_to 'ZC', admin_encode_path(f.object, :edit => true)
    -unless f.object.zencoder_job_id
      .form-field
        %label
          Generated By
        Asset - 
        =f.object.generated_by_asset_id
    .form-field
      %label
        ZC Complete?
      =f.object.zencoder_job_complete ? "Yes":"No"
    -unless f.object.zencoder_job_id
      .form-field
        %label
          ZC Output ID
        -if f.object.zencoder_output_id
          =link_to f.object.zencoder_output_id, "https://app.zencoder.com/output_media_files/#{f.object.zencoder_output_id}", :target => "_blank"
    -if f.object.data_file_name
      .form-field
        %label
          File Name
        =f.object.data_file_name
      .form-field
        %label
          File Size
        =number_to_human_size(f.object.data_file_size)
      .form-field
        %label
          Content Type
        =f.object.data_content_type
      .form-field
        %label
          Duration
        =f.object.duration
      .form-field
        %label
          Size
        ="#{f.object.width}x#{f.object.height}"
.clear